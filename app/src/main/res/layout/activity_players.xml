<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uno"
    tools:context=".PlayersActivity">


    <TextView
        android:id="@+id/text_view_task"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Wybierz tryb gry"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:freezesText="true"
        android:background="@drawable/taskbg"/>

    <Button
        android:id="@+id/button_single"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text_view_task"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/playerbg"
        android:text="Pojedynczy"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />
    <Button
        android:id="@+id/button_multi"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button_single"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/playerbg"
        android:text="2vs2"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

</RelativeLayout>